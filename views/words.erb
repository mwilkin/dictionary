<h2>List of Words</h2>
<br>
<div id="word_list">
  <% if @words.length > 0 %>
    <ul class ="word_list">
      <% @words.each() do |word| %>
        <li><a href="/words/<%= word.id() %>"> <%= word.word() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h2>No words have been added yet</h2>
  <% end %>
</div>
<hr>
<h3><a href="/words/new">Add a word</a></h3>
